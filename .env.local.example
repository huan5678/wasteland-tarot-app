# Next.js 環境變數範例
# 複製此檔案為 .env.local 並填入實際值

# API 端點配置
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# Supabase 配置（前端僅使用 anon key）
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Daily Bingo 配置
NEXT_PUBLIC_BINGO_ENABLE=true
NEXT_PUBLIC_BINGO_CYCLE_LENGTH=25
NEXT_PUBLIC_BINGO_MIN_LINES_FOR_REWARD=3

# 功能開關
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_WEB_AUDIO=true
NEXT_PUBLIC_ENABLE_DOTO_FONT=true

# 開發模式配置
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_MOCK_API=false
