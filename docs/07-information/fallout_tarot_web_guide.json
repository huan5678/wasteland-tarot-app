      "api_structure": {
        "cards": {
          "GET /api/wasteland/cards": "取得所有廢土塔羅牌",
          "GET /api/wasteland/cards/:id": "取得特定卡牌詳細資訊",
          "GET /api/wasteland/suits/:suit": "取得特定花色所有卡牌"
        },
        "divination": {
          "POST /api/wasteland/shuffle": "廢土風格洗牌算法",
          "POST /api/wasteland/draw": "抽取廢土卡牌",
          "POST /api/wasteland/interpret": "生成廢土風格解讀"
        },
        "characters": {
          "GET /api/wasteland/interpreters": "取得可用解讀角色",
          "POST /api/wasteland/interpret/:character": "特定角色風格解讀"
        }
      }
    }
